# Sentinel .env template
# Copy to .env and fill in values

# Required for VLM/LLM (backend, experiments)
OPENAI_API_KEY=

# RAG: policy provider (mock | s3)
RAG_PROVIDER=mock

# RAG: vector store (memory | opensearch)
RAG_STORE=memory

# S3 (when RAG_PROVIDER=s3)
RAG_S3_BUCKET=sentinel-policy-docs
RAG_S3_PREFIX=policy/
AWS_REGION=us-east-1

# OpenSearch (when RAG_STORE=opensearch)
OPENSEARCH_ENDPOINT=
OPENSEARCH_INDEX=policy-docs

# Local OpenSearch (non-AWS, basic auth)
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# VLM mode: stub | live
SENTINEL_VLM_MODE=stub

# Experiments: local data dir (optional)
# RAG_DATA_DIR=./experiments/rag/data
